<Window x:Class="DeveloperTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeveloperTools"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="开发者工具 - Developer Tools" Height="450" Width="800"
        Closed="MainWindow_Closed">
    <Grid>
        <Button x:Name="OnlineBtn" Content="在线模式" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="OnlineBtnClick"/>
        <Button x:Name="OfflineBtn" Content="离线模式" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Click="OfflineBtnClick"/>
        <cefSharp:ChromiumWebBrowser Name="browser" Margin="67,0,0,0"/>
    </Grid>
</Window>
